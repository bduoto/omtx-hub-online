# OMTX-Hub Backend Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# GCP Project Configuration (Required)
# =============================================================================
GOOGLE_CLOUD_PROJECT=om-models
GCP_REGION=us-central1
GCP_BUCKET_NAME=hub-job-files

# =============================================================================
# Service URLs (Required)
# =============================================================================
GPU_WORKER_URL=https://boltz2-production-zhye5az7za-uc.a.run.app

# =============================================================================
# Cloud Tasks Configuration (Required)
# =============================================================================
CLOUD_TASKS_LOCATION=us-central1

# =============================================================================
# Environment Settings (Optional)
# =============================================================================
ENVIRONMENT=production
# Options: production, development, staging

# =============================================================================
# Authentication (Optional)
# =============================================================================
JWT_SECRET_KEY=your-secret-key-change-in-production
# Only needed for development/testing with manual JWT tokens
# In production, Cloud Tasks OIDC is used for authentication

# =============================================================================
# Monitoring and Background Services (Optional)
# =============================================================================
ENABLE_JOB_MONITORING=false
# Set to 'true' to enable background job monitoring service
# Recommended: false for Cloud Run (use Cloud Tasks instead)

ENABLE_SYSTEM_MONITORING=false  
# Set to 'true' to enable system monitoring service
# Recommended: false for Cloud Run (use Cloud Monitoring instead)

# =============================================================================
# Legacy Environment Variables (Deprecated but supported)
# =============================================================================
# GCP_PROJECT_ID=om-models  # Use GOOGLE_CLOUD_PROJECT instead
# GCS_BUCKET_NAME=hub-job-files  # Use GCP_BUCKET_NAME instead

# =============================================================================
# Development-only Settings
# =============================================================================
# Uncomment for local development
# ENVIRONMENT=development
# ENABLE_JOB_MONITORING=true
# ENABLE_SYSTEM_MONITORING=true

# =============================================================================
# Cloud Run Specific (Set via gcloud deploy, not .env)
# =============================================================================
# PORT=8080  # Automatically set by Cloud Run
# K_SERVICE=omtx-hub-native  # Automatically set by Cloud Run
# K_REVISION=omtx-hub-native-00001-abc  # Automatically set by Cloud Run
